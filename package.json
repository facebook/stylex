{
  "private": true,
  "name": "stylex-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "prepare": "husky install tools/husky",
    "build": "npm run build --workspaces --if-present",
    "flow": "flow",
    "prettier": "prettier --write \"**/*.{js,flow,mjs}\"",
    "prettier:report": "prettier --check \"**/*.{js,flow,mjs}\"",
    "lint": "npm run lint:report -- --fix",
    "lint:report": "eslint . --ext .flow,.js,.jsx,.mjs",
    "release": "tools/npm/release.js",
    "test:packages": "npm run test --workspaces --if-present",
    "test": "npm run build && npm run flow && npm run test:packages && npm run prettier:report && npm run lint:report"
  },
  "workspaces": [
    "packages/style-value-parser",
    "packages/@stylexjs/stylex",
    "packages/@stylexjs/babel-plugin",
    "packages/@stylexjs/*",
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/estree": "^1.0.6",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-headers": "~1.2.1",
    "eslint-plugin-react": "^7.37.1",
    "flow-bin": "^0.291.0",
    "flow-typed": "^4.1.1",
    "hermes-eslint": "^0.32.1",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^13.0.3",
    "prettier": "3.5.3",
    "prettier-plugin-hermes-parser": "^0.32.0",
    "rimraf": "^6.1.2",
    "yargs": "18.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-hermes-parser"
    ],
    "proseWrap": "always",
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx",
          "*.mjs",
          "*.flow"
        ],
        "options": {
          "parser": "hermes"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git update-index --again",
      "npm run lint"
    ]
  }
}
