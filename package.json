{
  "private": true,
  "name": "stylex-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run build --workspaces --if-present",
    "flow": "flow",
    "prettier": "prettier --write \"**/*.js\" \"**/*.ts\"",
    "prettier:report": "prettier --check \"**/*.js\"",
    "lint": "npm run lint:report -- --fix",
    "lint:report": "eslint packages apps/docs apps/example-esbuild apps/example-rollup apps/example-webpack",
    "test:packages": "npm run test --workspaces --if-present",
    "test": "npm run build && npm run flow && npm run test:packages && npm run prettier:report && npm run lint:report"
  },
  "workspaces": [
    "packages/shared",
    "packages/stylex",
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/estree": "^1.0.6",
    "@types/jest": "^29.5.13",
    "cross-env": "^7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-react": "^7.37.1",
    "flow-bin": "^0.261.0",
    "hermes-eslint": "^0.26.0",
    "husky": "^8.0.0",
    "jest": "^30.0.0-alpha.6",
    "lint-staged": "^13.0.3",
    "prettier": "^3.5.0",
    "prettier-plugin-hermes-parser": "^0.26.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-hermes-parser"
    ],
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx",
          "*.flow"
        ],
        "options": {
          "parser": "hermes"
        }
      }
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git update-index --again",
      "npm run lint:report"
    ]
  }
}
